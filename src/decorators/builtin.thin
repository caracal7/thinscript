/**
 * Annotates a function or class as a builtin. This annotation can only be used from
 * within the standard library.
 * @param node The node being decorated
 * @param context Current checker context
 * @param decorator The respective decorator node
 */
function decorateBuiltin(node: Node, context: CheckContext, decorator: Node): void {
  assert(node.kind == NodeKind.FUNCTION || node.kind == NodeKind.CLASS);

  node.flags = node.flags | NODE_FLAG_BUILTIN;
}
