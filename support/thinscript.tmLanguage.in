<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <key>scopeName</key>
  <string>source.thin</string>

  <key>fileTypes</key>
  <array>
    <string>thin</string>
  </array>

  <key>name</key>
  <string>thinscript</string>

  <key>foldingStartMarker</key>
  <string>\{\s*$</string>

  <key>foldingStopMarker</key>
  <string>^\s*\}</string>

  <key>firstLineMatch</key>
  <string>^#!/.*\bthin\b</string>

  <key>patterns</key>
  <array>

    <dict>
      <key>include</key>
      <string>#toplevel</string>
    </dict>

  </array>

  <key>repository</key>
  <dict>

    <!-- Top level -->

    <key>toplevel</key>
    <dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#comments</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#preprocessor</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#block</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#variable</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#casts</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#decorator</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#function</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#enum</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#class</string>
        </dict>

        <dict>
          <key>name</key>
          <string>keyword.control.thin</string>
          <key>match</key>
          <string>\b(export|import|extern|declare)\b</string>
        </dict>

        <dict>
          <key>name</key>
          <string>keyword.thin</string>
          <key>match</key>
          <string>\b(function|class|interface|extends|implements|var|let|const)\b</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#constants</string>
        </dict>

      </array>
    </dict>

    <!-- Comments -->

    <key>comments</key>
    <dict>
      <key>patterns</key>
      <array>

        <dict>
          <key>name</key>
          <string>comment.thin</string>
          <key>match</key>
          <string>//(?!\!#).*$</string>
        </dict>

        <dict>
          <key>name</key>
          <string>comment.thin</string>

          <key>begin</key>
          <string>/\*</string>

          <key>end</key>
          <string>\*/</string>

          <key>patterns</key>
          <array>
            <dict>

              <key>match</key>
              <string>^\s*\*\s*(@[\w_]+)\b</string>

              <key>captures</key>
              <dict>
                <key>1</key>
                <dict>
                  <key>name</key>
                  <string>keyword.other.thin</string>
                </dict>
              </dict>

            </dict>
          </array>
        </dict>

      </array>
    </dict>

    <!-- Preprocessor -->

    <key>preprocessor</key>
    <dict>

      <key>match</key>
      <string>^\s*((?://!)?#(?:define|undef|ifdef|if|elif|else|endif|warning|error))\b([^$]*)$</string>

      <key>captures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>${category.preprocessor}</string>
        </dict>

        <key>2</key>
        <dict>
          <key>name</key>
          <string>variable.preprocessor.thin</string>
        </dict>

      </dict>
    </dict>

    <!-- Variables -->

    <key>variable</key>
    <dict>

      <key>match</key>
      <string>\b(?:(unsafe)\s+)?(var|let|const)\s+(${identifier})\b</string>

      <key>captures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>${category.unsafe}</string>
        </dict>

        <key>2</key>
        <dict>
          <key>name</key>
          <string>keyword.thin</string>
        </dict>

        <key>3</key>
        <dict>
          <key>name</key>
          <string>variable.thin</string>
        </dict>

      </dict>
    </dict>

    <!-- Casts -->

    <key>casts</key>
    <dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>match</key>
          <string>\b(as|sizeof|alignof)\s+(\*?${identifier})\b</string>

          <key>captures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>keyword.control.thin</string>
            </dict>

            <key>2</key>
            <dict>
              <key>name</key>
              <string>entity.name.type.thin</string>
            </dict>

          </dict>
        </dict>

      </array>
    </dict>

    <!-- Functions -->

    <key>function</key>
    <dict>

      <key>begin</key>
      <string>\b(?:(extern|export|declare)\s+)?(?:(unsafe)\s+)?(function)\b(?:\s+(${identifier})\b)?\s*\(</string>

      <key>end</key>
      <string>\)\s*\:\s*(\*?${identifier})\b</string>

      <key>beginCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>keyword.control.thin</string>
        </dict>

        <key>2</key>
        <dict>
          <key>name</key>
          <string>${category.unsafe}</string>
        </dict>

        <key>3</key>
        <dict>
          <key>name</key>
          <string>keyword.thin</string>
        </dict>

        <key>4</key>
        <dict>
          <key>name</key>
          <string>entity.name.function.thin</string>
        </dict>

      </dict>

      <key>endCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>entity.name.type.thin</string>
        </dict>

      </dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#type</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#name</string>
        </dict>

      </array>

    </dict>

    <!-- Enums -->

    <key>enum</key>
    <dict>

      <key>begin</key>
      <string>\b(enum)\s+(${identifier})\s*\{</string>

      <key>end</key>
      <string>\}</string>

      <key>beginCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>keyword.thin</string>
        </dict>

        <key>2</key>
        <dict>
          <key>name</key>
          <string>entity.name.type.thin</string>
        </dict>

      </dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#comments</string>
        </dict>

        <dict>
          <key>name</key>
          <string>constant.numeric.thin</string>
          <key>match</key>
          <string>\b(${identifier})\b</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#constants</string>
        </dict>

      </array>

    </dict>

    <!-- Classes -->

    <key>class</key>
    <dict>

      <key>begin</key>
      <string>\b(?:(export|declare)\s+)?(?:(public|private|protected)\s+)?(class|interface)\b(?:\s+(${identifier})\b)\s*\{</string>

      <key>end</key>
      <string>\}</string>

      <key>beginCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>keyword.control.thin</string>
        </dict>

        <key>2</key>
        <dict>
          <key>name</key>
          <string>keyword.thin</string>
        </dict>

        <key>3</key>
        <dict>
          <key>name</key>
          <string>keyword.thin</string>
        </dict>

        <key>4</key>
        <dict>
          <key>name</key>
          <string>entity.name.class.thin</string>
        </dict>

      </dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#comments</string>
        </dict>

        <dict>

          <key>begin</key>
          <string>\b(?:(unsafe)\s+)?(operator)\s+(%|&amp;|\*\*?|\+\+?|\-\-?|\/|&lt;&lt;?|==?|&gt;&gt;?|\[\]=?|\^|\||~)\s*\(</string>

          <key>end</key>
          <string>\)\s*\:\s*(\*?${identifier})\b</string>

          <key>beginCaptures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>${category.unsafe}</string>
            </dict>

            <key>2</key>
            <dict>
              <key>name</key>
              <string>keyword.thin</string>
            </dict>

            <key>3</key>
            <dict>
              <key>name</key>
              <string>entity.name.function.thin</string>
            </dict>

          </dict>

          <key>endCaptures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>entity.name.type.thin</string>
            </dict>

          </dict>

          <key>patterns</key>
          <array>

            <dict>
              <key>include</key>
              <string>#type</string>
            </dict>

            <dict>
              <key>include</key>
              <string>#name</string>
            </dict>

            <dict>
              <key>include</key>
              <string>#constants</string>
            </dict>

          </array>

        </dict>

        <dict>

          <key>begin</key>
          <string>\b(?:(public|private|protected)\s+)?(?:(static)\s+)?(?:(unsafe)\s+)?(?:(get|set)\s+)?(${identifier})\b\s*\(</string>

          <key>end</key>
          <string>\)\s*\:\s*(\*?${identifier})\b</string>

          <key>beginCaptures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>keyword.thin</string>
            </dict>

            <key>2</key>
            <dict>
              <key>name</key>
              <string>keyword.thin</string>
            </dict>

            <key>3</key>
            <dict>
              <key>name</key>
              <string>${category.unsafe}</string>
            </dict>

            <key>4</key>
            <dict>
              <key>name</key>
              <string>keyword.thin</string>
            </dict>

            <key>5</key>
            <dict>
              <key>name</key>
              <string>entity.name.function.thin</string>
            </dict>

          </dict>

          <key>endCaptures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>entity.name.type.thin</string>
            </dict>

          </dict>

          <key>patterns</key>
          <array>

            <dict>
              <key>include</key>
              <string>#type</string>
            </dict>

            <dict>
              <key>include</key>
              <string>#name</string>
            </dict>

          </array>

        </dict>

        <dict>
          <key>include</key>
          <string>#type</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#name</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#block</string>
        </dict>

      </array>

    </dict>

    <!-- Decorators -->

    <key>decorator</key>
    <dict>

      <key>begin</key>
      <string>^\s*(@${identifier})\s*(?:\()?</string>

      <key>end</key>
      <string>\)?\s*$</string>

      <key>beginCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>${category.decorator}</string>
        </dict>

      </dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#type</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#name</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#constants</string>
        </dict>

      </array>

    </dict>

    <!-- Types -->

    <key>type</key>
    <dict>

      <key>match</key>
      <string>\:\s*(\*?${identifier})\b</string>

      <key>captures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>entity.name.type.thin</string>
        </dict>

      </dict>

    </dict>

    <key>name</key>
    <dict>

      <key>match</key>
      <string>\b(${identifier})\b\s*(?=[;=\:])</string>

      <key>captures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>variable.thin</string>
        </dict>

      </dict>

    </dict>

    <!-- Code -->

    <key>block</key>
    <dict>

      <key>begin</key>
      <string>(?:\b(unsafe)\s+)?\{</string>

      <key>beginCaptures</key>
      <dict>

        <key>1</key>
        <dict>
          <key>name</key>
          <string>${category.unsafe}</string>
        </dict>

      </dict>

      <key>end</key>
      <string>\}</string>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#code</string>
        </dict>

      </array>
    </dict>

    <key>code</key>
    <dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>include</key>
          <string>#comments</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#block</string>
        </dict>

        <dict>
          <key>name</key>
          <string>keyword.control.thin</string>
          <key>match</key>
          <string>\b(if|else|while|break|continue|return)\b</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#variable</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#casts</string>
        </dict>

        <dict>
          <key>include</key>
          <string>#constants</string>
        </dict>

        <dict>
          <key>match</key>
          <string>\b(assert(?:${identifier})?)\s*\(</string>

          <key>captures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>${category.assertion}</string>
            </dict>

          </dict>
        </dict>

        <dict>
          <key>match</key>
          <string>\b(?:(new)\s+)*(${identifier})\s*\(</string>

          <key>captures</key>
          <dict>

            <key>1</key>
            <dict>
              <key>name</key>
              <string>keyword.thin</string>
            </dict>

            <key>2</key>
            <dict>
              <key>name</key>
              <string>entity.name.function.thin</string>
            </dict>

          </dict>
        </dict>

        <dict>
          <key>name</key>
          <string>variable.thin</string>
          <key>match</key>
          <string>\b(${identifier})\b</string>
        </dict>

      </array>
    </dict>

    <!-- Constants -->

    <key>constants</key>
    <dict>
      <key>patterns</key>
      <array>

        <dict>
          <key>name</key>
          <string>constant.language.thin</string>
          <key>match</key>
          <string>\b(?:false|null|true|this)\b</string>
        </dict>

        <dict>
          <key>name</key>
          <string>constant.numeric.thin</string>
          <key>match</key>
          <string>\b\d+\b</string>
        </dict>

        <dict>
          <key>name</key>
          <string>constant.numeric.thin</string>
          <key>match</key>
          <string>\b0x[0-9A-Fa-f]+\b</string>
        </dict>

        <dict>
          <key>name</key>
          <string>string.quoted.double.thin</string>

          <key>begin</key>
          <string>"</string>

          <key>end</key>
          <string>"</string>

          <key>patterns</key>
          <array>
            <dict>
              <key>include</key>
              <string>#string-escaped-char</string>
            </dict>
          </array>

        </dict>

        <dict>
          <key>name</key>
          <string>constant.numeric.thin</string>

          <key>begin</key>
          <string>'</string>

          <key>end</key>
          <string>(?:.|\\(?:\\|[abefnprtv'"?]|[0-3]\d{,2}|[4-7]\d?|x[a-fA-F0-9]{,2}|u[a-fA-F0-9]{,4}|U[a-fA-F0-9]{,8}))'</string>

          <key>patterns</key>
          <array>
            <dict>
              <key>match</key>
              <string>.</string>
              <key>name</key>
              <string>invalid.illegal.single-char.thin</string>
            </dict>
          </array>
        </dict>

        <dict>

          <key>begin</key>
          <string>(`)</string>

          <key>beginCaptures</key>
          <dict>
            <key>1</key>
            <string>string.quoted.thin</string>
          </dict>

          <key>end</key>
          <string>(`)</string>

          <key>endCaptures</key>
          <dict>
            <key>1</key>
            <string>string.quoted.thin</string>
          </dict>

          <key>patterns</key>
          <array>

            <dict>
              <key>include</key>
              <string>#toplevel</string>
            </dict>

          </array>

        </dict>

      </array>
    </dict>

    <key>string-escaped-char</key>
    <dict>

      <key>patterns</key>
      <array>

        <dict>
          <key>match</key>
          <string>\\(\\|[abefnprtv'"?]|[0-3]\d{,2}|[4-7]\d?|x[a-fA-F0-9]{,2}|u[a-fA-F0-9]{,4}|U[a-fA-F0-9]{,8})</string>
          <key>name</key>
          <string>constant.character.escape.thin</string>
        </dict>

        <dict>
          <key>match</key>
          <string>\\.</string>
          <key>name</key>
          <string>invalid.illegal.escape.thin</string>
        </dict>

      </array>
    </dict>

  </dict>
</dict>
</plist>
